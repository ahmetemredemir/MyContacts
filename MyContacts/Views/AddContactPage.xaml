<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyContacts.Views.AddContactPage"
             Title="Add Contact Page">
    <VerticalStackLayout Spacing="10" Padding="20">
        <Label Text="Add Contact" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="NameEntry" Placeholder="Name" VerticalOptions="Center"></Entry>
        <Entry x:Name="PhoneEntry" Placeholder="Phone" Keyboard="Telephone" VerticalOptions="Center"></Entry>
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" VerticalOptions="Center"></Entry>

        <HorizontalStackLayout Spacing="10">
            <Button Text="Save" VerticalOptions="Start"  BackgroundColor="Green" TextColor="white" x:Name="SaveButton" Clicked="SaveButton_Clicked"></Button>
            <Button Text="Cancel" VerticalOptions="End" BackgroundColor="Gray" TextColor="white" x:Name="BackButton" Clicked="BackButton_Clicked"></Button>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>