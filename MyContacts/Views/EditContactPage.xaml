<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyContacts.Views.EditContactPage"
             Title="Edit Contact">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Edit Contact" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="NameEntry" Placeholder="Name Surname" />
        <Entry x:Name="PhoneEntry" Placeholder="Phone Number" Keyboard="Telephone" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="Save" BackgroundColor="Green" TextColor="White" Clicked="SaveButton_Clicked" />
            <Button Text="Cancel" BackgroundColor="Gray" TextColor="White" Clicked="CancelButton_Clicked" />
        </HorizontalStackLayout>

        <Button Text="Delete" BackgroundColor="Red" TextColor="White" Clicked="DeleteButton_Clicked" />
    </VerticalStackLayout>
</ContentPage>
